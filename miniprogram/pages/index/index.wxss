/**index.wxss**/
.locationIcon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.area {
  width: 60rpx;
  height: 60rpx;
}
.locationTitle {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
.bgWave {
  width: 100vw;
  position: absolute;
  bottom: -2px;
  left: 0;
  right: 0;
  height: 120rpx;
  mix-blend-mode: screen;
}
.nowTmp {
  font-size: 200rpx;
  color: #ffffff;
  margin-right: auto;
}
.nowText{
  color: #fff;
  font-weight: bold;
  line-height: 70px;
}
.tip {
  margin-top: 30rpx;
  font-size: 30rpx;
  opacity: 0.8;
  color: #ffffff;
}
.tip:nth-child(3) {
  text-align: right;
}
.tip:nth-child(2) {
  text-align: center;
}
.card {
  padding: 0 30rpx;
  margin-top: 30rpx;
}
.card .title {
  font-size: 40rpx;
  font-weight: bolder;
  margin-left: 14rpx;
  margin-bottom: 16rpx;
  border-radius: 2rpx;
  border-left: 8rpx solid #2F80ED;
  padding-left: 15rpx;
}
.nav {
  width: 100%;
  white-space: nowrap;
  background-color: #ffffff;
  transition: all 0.2s ease;
  border-radius: 5rpx;
  box-shadow: 0 5rpx 10rpx rgb(0 0 0 / 12%);
  overflow-x: scroll;
  overflow-y: hidden;
  text-align: center;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  margin-top: 28rpx;
}
.nav::-webkit-scrollbar {
	display: none;
}
.navContent {
  display: inline-block;
  font-size: 30rpx;
  padding: 18rpx 0;
}
.dConetnt {
  padding: 10rpx 0;
  margin-bottom: 5rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.dCard .van-image{
  vertical-align:bottom;
}
